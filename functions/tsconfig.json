{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "..",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "src",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/__tests__/**",
    "node_modules"
  ]
}
