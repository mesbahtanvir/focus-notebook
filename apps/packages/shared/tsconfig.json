{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {}
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
