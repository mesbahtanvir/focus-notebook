{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "frontend/web/*"
      ],
      "@/mobile/*": [
        "frontend/mobile/*"
      ]
    },
    "types": [
      "jest",
      "@testing-library/jest-dom",
      "node"
    ],
    "esModuleInterop": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "frontend/web/next-env.d.ts",
    "frontend/web/**/*.ts",
    "frontend/web/**/*.tsx",
    "frontend/web/.next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "frontend/functions",
    "backend"
  ]
}
