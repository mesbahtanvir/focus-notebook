rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload CSV statements to their own directory
    match /users/{userId}/statements/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to upload Dexa scans to their own directory
    match /users/{userId}/dexaScans/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Photo library for gallery uploads
    match /users/{userId}/photo-library/{photoId} {
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && (
                     request.method == 'delete' ||
                     (
                       request.resource != null &&
                       request.resource.size < 10 * 1024 * 1024 &&
                       request.resource.contentType.matches('image/.*')
                     )
                   );
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // CDN-friendly image buckets (thumbnails + originals)
    match /images/{variant}/{userId}/{photoId} {
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && variant in ['original', 'thumb']
                   && request.resource != null
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');

      // Direct reads limited to owners; signed URLs (used for CDN) bypass rules.
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Photo feedback - requires authentication to create sessions
    match /photo-feedback/{sessionId}/{photoId} {
      // Only authenticated users can upload photos (for creating sessions)
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024 // Max 10MB per photo
                   && request.resource.contentType.matches('image/.*');

      // Anyone can read photos (for viewing/voting)
      allow read: if true;
    }

    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
