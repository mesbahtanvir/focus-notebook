rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload CSV statements to their own directory
    match /users/{userId}/statements/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to upload Dexa scans to their own directory
    match /users/{userId}/dexaScans/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Photo feedback - anonymous uploads allowed
    match /photo-feedback/{sessionId}/{photoId} {
      // Anyone can upload photos (for creating sessions)
      allow write: if request.resource.size < 10 * 1024 * 1024 // Max 10MB per photo
                   && request.resource.contentType.matches('image/.*');

      // Anyone can read photos (for viewing/voting)
      allow read: if true;
    }

    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
