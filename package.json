{
  "name": "focus-notebook",
  "private": true,
  "version": "1.0.0",
  "engines": {
    "node": ">=22"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:functions": "npm run dev --workspace=apps/functions",
    "build": "npm run build --workspaces --if-present",
    "build:web": "npm run build --workspace=apps/web",
    "build:functions": "npm run build --workspace=apps/functions",
    "start": "npm run start --workspace=apps/web",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:web": "npm run test --workspace=apps/web",
    "test:functions": "npm run test --workspace=apps/functions",
    "test:screenshots": "npm run test:screenshots --workspace=apps/web",
    "validate": "npm run lint && npm run test && npm run build",
    "deploy": "firebase deploy",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:rules": "firebase deploy --only firestore:rules,storage:rules"
  },
  "devDependencies": {
    "typescript": "5.6.3"
  }
}
